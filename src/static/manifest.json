{
  "manifest_version": 2,
  "name": "ezpp!",
  "description": "Directly calculate pp for a beatmap in your browser.",
  "version": "1.2.9",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "applications": {
    "gecko": {
      "id": "ezpp@bittipiilo.com"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ppy.sh/s/*",
        "http://*.ppy.sh/s/*",
        "https://*.ppy.sh/b/*",
        "http://*.ppy.sh/b/*"
      ],
      "js": ["extension.js"]
    }
  ],
  "page_action": {
    "default_icon": "icon48.png"
  },
  "permissions": [
    "tabs", "storage",
    "https://*.ppy.sh/",
    "http://*.ppy.sh/"
  ]
}
